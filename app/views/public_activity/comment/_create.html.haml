- if activity.trackable
  .row.activity_alone
    .icons
      %i.icon-plus
      %i.icon-comment-alt
      %i.avatar_activites= user_icon(activity.trackable.user)

    %small
      #{distance_of_time_in_words_to_now(activity.created_at)},
      - if activity.trackable.commentable.discussable.class.to_s == "Task"
        = link_to (activity.trackable.comment), project_task_path(activity.trackable.commentable.discussable.project, activity.trackable.commentable.discussable.id)
      - else
        = link_to (activity.trackable.comment), discussion_path(activity.trackable.commentable.id)